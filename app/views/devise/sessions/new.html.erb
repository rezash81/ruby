<div class="login-page">
  <div class="col-md-12">
    <h3 class="text-center">ورود</h3><hr>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label :username, "نام کاربری" , class: 'col-xs-3 control-label' %>
        <div class="col-xs-9">
          <%= f.text_field :username, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, "گذرواژه", class: 'col-xs-3 control-label' %>
        <div class="col-xs-9">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <% if devise_mapping.rememberable? %>
        <div class="col-md-offset-3 col-md-4">
          <div class="checkbox">
            <%= f.check_box :remember_me %> <%= f.label :remember_me, 'مرا به خاطر بسپار' %>
          </div>
        </div>
        <% end -%>
        <div class="col-md-5">
          <%= f.submit 'ورود', class: 'btn btn-info btn-block' %>
        </div>
      </div>

      <div class="form-group">
        <div class="com-md-offset-3 col-md-4">
          <%= link_to 'گذرواژه خود را فراموش کرده‌ام', new_user_password_path, class: 'btn btn-link' %>
        </div>
      </div>

    <% end %>
  </div>
</div>