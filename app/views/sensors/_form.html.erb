<%= form_for @sensor, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:name].length > 0 %>">
    <%= f.label :name, t('name'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control", required: true %>
      <% if @sensor.errors[:name].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:channel_index].length > 0 %>">
    <%= f.label :channel_index, t('channel_index'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :channel_index, class: "form-control", required: true %>
      <% if @sensor.errors[:channel_index].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:measure_unit].length > 0 %>">
    <%= f.label :measure_unit, t('measure_unit'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :measure_unit, class: "form-control", required: true %>
      <% if @sensor.errors[:measure_unit].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>


  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:description].length > 0 %>">
    <%= f.label :description, t('description'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_area :description, class: "form-control", style: 'resize:vertical;', rows: 6 %>
      <% if @sensor.errors[:description].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:code].length > 0 %>">
