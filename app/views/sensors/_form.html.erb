      <% if @sensor.errors[:unit_code].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:unit_avb].length > 0 %>">
    <%= f.label :unit_avb, t('unit_avb'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :unit_avb, class: "form-control" %>
      <% if @sensor.errors[:unit_avb].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:saving_type].length > 0 %>">
    <%= f.label :saving_type, t('saving_type'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :saving_type, class: "form-control" %>
      <% if @sensor.errors[:saving_type].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:channel_type].length > 0 %>">
    <%= f.label :channel_type, t('channel_type'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :channel_type, class: "form-control" %>
      <% if @sensor.errors[:channel_type].length > 0 %>
      <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:hw_port_type].length > 0 %>">
    <%= f.label :hw_port_type, t('hw_port_type'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :hw_port_type, class: "form-control" %>
