      <% end %>
    </div>
  </div>

  <div class="form-group<%= ' has-error has-feedback' if @sensor.errors[:is_active].length > 0 %>">
    <div class="com-sm-4 col-sm-offset-2">
      <div class="checkbox">
        <%= f.label :is_active do %>
          <%= f.check_box(:is_active) %> <%= t('is_active') %>
        <% end %>
      </div>
    </div>
    <% if @sensor.errors[:is_active].length > 0 %>
    <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
    <% end %>
  </div>

  <div class="actions col-sm-offset-2">
    <%= f.submit t('save'), class: 'btn btn-default' %>
  </div>
